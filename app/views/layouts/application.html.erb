    <div class="container-fluid">
      <div class="row">
        <div class="dark col-sm-6 col-xs-12">test</div>
        <div class="darker col-sm-3 col-xs-6">test2</div> 
        <div class="darkest col-sm-3 col-xs-6">test3</div>   
